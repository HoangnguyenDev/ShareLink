@model ShareLink.Models.WidgetViewModels.StyleHomeViewModel
<!-- -->
<div class="sidebarblock">
    <h3 style="color: red; font-weight:bold;margin-bottom: 0px;">Link hot</h3>
    <div class="divline"></div>
    <div class="blocktxt">
        <ul class="cats">
            @foreach (var item in Model.ListHot)
            {
                <li>
                    <a asp-controller="sharelink" asp-action="Click" asp-route-id="@item.ID">
                        @item.Title
                        <span class="badge pull-right">0</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
<div class="sidebarblock">
    <h3>Tìm chúng tôi trên facebook</h3>
    <div class="divline"></div>
    <div class="blocktxt">
        <div class="fb-page" data-href="https://www.facebook.com/Chia-Sẻ-Link-Hot-1755968301100273/" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
            <blockquote cite="https://www.facebook.com/Chia-Sẻ-Link-Hot-1755968301100273/" class="fb-xfbml-parse-ignore">
                <a href="https://www.facebook.com/Chia-Sẻ-Link-Hot-1755968301100273/">Chia sẻ hot</a>
            </blockquote>
        </div>
    </div>
</div>

<div class="sidebarblock">
    <div class="blocktxt">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Tự động -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-3409939582219225"
             data-ad-slot="4889500928"
             data-ad-format="auto"></ins>
        <script defer>
                        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
</div>
