@model ShareLinkViewModel
@inject ApplicationDbContext _context
<div class="modal fade version-model" id="send-new" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        @{
            ViewData["CategoryID"] = new SelectList(_context.Category, "ID", "Name");
        }
        <!-- Modal content-->
        <form asp-action="SendLink" asp-controller="ShareLink" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Chia sẻ Link</h4>
                </div>
                <div class="modal-body">
                    <input asp-for="CurrentUrl" type="hidden" />
                    <div id="form-report">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input required asp-for="Link" class="form-control" type="url" placeholder="Link muốn chia sẻ" />
                                    <span asp-validation-for="Link" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select required asp-for="CategoryID" asp-items="ViewBag.CategoryID" class="form-control">
                                        <option selected disabled>Gửi vào kênh</option>
                                    </select>
                                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input asp-for="Title" maxlength="200" required class="form-control" placeholder="Thông điệp chính">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea asp-for="Description" maxlength="200" placeholder="Thông điệp phụ (Không bắt buộc, tối đa 200 từ)" cols="5" rows="5" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="footer-report" class="modal-footer">
                    <button id="submit-send-link" type="button" class="btn btn-danger">Chia sẻ</button>
                </div>

            </div>
        </form>

    </div>
</div>