<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-lg-8 col-md-8">
            @if (Model.Any())
            { }
            @foreach(var item in Model)
            { 
            <!-- POST -->
            <div class="post">
                <div class="wrap-ut pull-left">
                    <div class="userinfo pull-left">
                        <div class="avatar">
                            <img src="~/images-null.png" class="img-responsive" alt="" />
                            @*<div class="status green">&nbsp;</div>*@
                        </div>

                        <div class="icons">
                            <i class="fa fa-clock-o"></i> @item.ShowCreateDT
                        </div>
                    </div>
                    <div class="posttext pull-left">
                        <h2>
                            <a asp-controller="sharelink" asp-action="Click" asp-route-id="@item.ID">@item.Title</a>
                        </h2>
                        <p class="post-orther-info">
                            <span><img width="18px" height="18px" src="@item.Author.Picture65x65" alt="TanNg">  @item.Author.FullName
                            </span>
                            <span>
                                <i class="fa fa-file"></i> @item.Category.Name
                            </span>
                            <span>
                                <i class="fa fa-internet-explorer"></i> <a href="">Sẽ cập nhật sau</a>
                            </span>
                        </p>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="postinfo pull-left">
                    <div class="comments">
                        <div class="commentbg">
                            @item.Like
                            <div class="mark"></div>
                        </div>

                    </div>
                    <div class="views">
                        <i class="fa fa-eye"></i> @item.Views
                    </div>
                    <div class="time">
                        <i class="fa fa-comment"></i> 0
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- POST -->
            }

        </div>
        <div class="col-lg-4 col-md-4">
            @await Html.PartialAsync("StyleHomePartial", sidebar)
            

        </div>
    </div>
</div>



